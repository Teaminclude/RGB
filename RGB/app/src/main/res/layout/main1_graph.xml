<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/main1_decol"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:scaleType="center"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="50dp"
            android:textStyle="bold"
            android:text="열일하는\n워커홀릭"
            android:textColor="#7707ff"
            android:textSize="35dp" />
        <ImageView
            android:src="@drawable/main1_decor"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:scaleType="center"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/graph_background"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/graph_background1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/graph_background2"/>
            </FrameLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/graph_growth"
            android:layout_gravity="left|bottom"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/graph_realation"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/graph_break"
            android:layout_gravity="right|bottom"
            />
        <com.example.kimdonggeun.rgb.graph_canvasview
            android:id="@+id/graph_canvasview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/text_graph_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="2018-05-31 14:12에\n진단된 컬러입니다. "
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="center"
                android:src="@drawable/main1_rankimage_1" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="center"
                android:src="@drawable/main1_rankimage_2" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="center"
                android:src="@drawable/main1_rankimage_3" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
